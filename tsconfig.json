{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "dist/esm",
    "pretty": true,
    "resolveJsonModule": true,
    "strict": true,
    "lib": ["dom", "ES2015", "ES2020"],
    "target": "ES2022"
  },
  "exclude": ["node_modules", "dist", "src/**/*.test.ts"],
  "include": ["src"]
}
